.content
  .content__left
    .content__left--image
  .content__right
    .content__right__top
      = link_to post.title, post_path(post.id), class: "content__right__top--title"
    .content__right__bottom
      .content__right__bottom--userName
        = link_to post.user.nickname, user_path(post.user), class: "content__right__bottom--userName--btn"
      .content__right__bottom--date
        = post.created_at


.create-one
  .create-one__body-main
    .create-one__body-main--top
      %p 誰でも簡単に手軽にできるブログアプリ
    .create-one__body-main--middle
      %p このブログアプリは個人で
      %p 日々の日常や出来事を記して
      %p 気軽に振り返ったり楽しんでやることができます
    .create-one__body-main--btn
      = link_to "#", class: "icon" do
        = image_tag 'app-store.svg',class: "appBtn"
      = link_to "#", class: "icon" do
        = image_tag 'google-play.svg',class: "googleBtn"
    
